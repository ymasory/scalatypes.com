!!! 5
html(lang="en")
  head
    meta(charset="utf-8")
    title Scala Types
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="description" content="")
    meta(name="author" content="")

    link(href="http://scalatypes.s3.amazonaws.com/css/bootstrap.css"
         rel="stylesheet")
    link(href="http://scalatypes.s3.amazonaws.com/css/styles.css"
         rel="stylesheet")
    link(href="http://scalatypes.s3.amazonaws.com/css/bootstrap-responsive.css"
         rel="stylesheet")

    link(rel="shortcut icon"
         href="http://scalatypes.s3.amazonaws.com/img/ico/favicon.ico")
    link(rel="apple-touch-icon-precomposed"
         sizes="144x144"
         href="http://scalatypes.s3.amazonaws.com/img/ico/icon-144.png")
    link(rel="apple-touch-icon-precomposed"
         sizes="114x114"
         href="http://scalatypes.s3.amazonaws.com/img/ico/icon-114.png")
