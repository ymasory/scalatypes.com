    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-36965767-1']);
      _gaq.push(['_setDomainName', 'scalatypes.com']);
      _gaq.push(['_setAllowLinker', true]);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  body
    div(id="wrap")
      div(class="navbar navbar-inverse navbar-fixed-top")
        div(class="navbar-inner")
          div(class="container")
            a(class="btn btn-navbar"
              data-toggle="collapse"
              data-target=".nav-collapse")
              span(class="icon-bar")
              span(class="icon-bar")
              span(class="icon-bar")
            a(class="brand" href="/")
              img(src="http://scalatypes.s3.amazonaws.com/img/site-logo.png"
                  alt="Scala Types")
            div(class="nav-collapse collapse")
              ul(class="nav")
                li(class="active")
                  a(href="/") Home
                li
                  a(href="episodes") Episodes
                li
                  a(href="community") Community
      div(class="content container")
        div(class="row")
          div(class="span8")
            h1 Podcast
            div(class="post padder")
              != body

    div(id="footer")
      div(class="container")
        div(class="row")
          div(class="span3")
            span(class="footer-title") Feedback
            ul
              li
                a(href="mailto:ymasory@gmail.com") Email
              li
                a(href="http://www.twitter.com/scalatypes") Twitter
              li
                a(href="https://groups.google.com/forum/?hl=en#!forum/scala-types") Scala Types Google Group
          div(class="span3")
            span(class="footer-title") Syndication
            ul
              li
                a(href="http://itunes.apple.com/us/podcast/the-scala-types/id443785200?uo=4") iTunes
              li
                a(href="http://scalatypes.com/rss") RSS
          div(class="span3")
            span(class="footer-title") Podcast Audio License
            ul
              li
                a(href="http://creativecommons.org/licenses/by-nc-nd/3.0/")
                  img(src="http://i.creativecommons.org/l/by-nc-nd/3.0/88x31.png")
          div(class="span3")
            span(class="footer-title") Website Code License
            ul
              li
                a(href="http://www.gnu.org/licenses/agpl-3.0.html") AGPLv3
              li
                a(href="http://joaosilva.co.uk/") Designed by Joao Da Silva
              li
                a(href="http://github.com/ymasory/scalatypes.com") Developed on GitHub
              li
